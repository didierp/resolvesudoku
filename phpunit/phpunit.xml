<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
bootstrap="./../vendor/autoload.php">
	<php>
		<ini name="date.timezone" value="Europe/Paris"/>
	</php>
	<testsuites>
		<testsuite name="UnitTests">
			<directory>./</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory suffix=".php">./../src/</directory>
			<file>./../src/*.php</file>
		</whitelist>
	</filter>
</phpunit>
